# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.prod and fill in the values

# PostgreSQL Database
POSTGRES_USER=meetopia_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=meetopiadb

# Backend API
DATABASE_URL=postgresql://meetopia_user:your_secure_password_here@postgres:5432/meetopiadb?schema=public
SECRET=your_very_long_secure_jwt_secret_here_at_least_32_characters
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://meetopiaapp.com

# Third-party providers (Agora for video calls)
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-app-certificate

# Frontend (used during build)
VITE_API_URL=https://api.meetopiaapp.com
VITE_SOCKET_URL=https://api.meetopiaapp.com
